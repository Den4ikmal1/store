<div class="row">
<h1>Country: <%= @country_name %></h1>
  <h2>Categories</h2>
   <ol class="tree"><%= just_tree @categories %></ol>
  <div class="col-md-7">
    <table class="table table-bordered table-striped">
      <tr>
        <th>Name:</th>
        <th>Edit</th>
        <th>Destroy</th>
    </tr>
    <% @categories.each do |category| %>
        <td><h4><%= category.name %></h4></td>
        <td><%= link_to "Edit", edit_category_path(category), :class => 'btn-custom2' %></td>
        <td><%= button_to "Delete", category , method: :delete, data: { confirm: "Are you sure?", }, :class => 'btn-custom2' %></td>
        </tr>
    <% end %>
  </table>
  <%= link_to "New category", new_category_path, class: 'btn-custom2' %>
</div>