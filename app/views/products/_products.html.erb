 <div class="row">
  <h1 class="current-category"><%= params[:category] %></h1>
  <% if products.count == 0 %>
    <h3>Now don't have products in the category</h3>
  <% else %>
    <% products.each do |product| %>
     
     <div class="col-md-3">
        <h3> <%=  product.title%> </h1>
          <% unless product.photos.blank? %>
            <a href="/products/<%= product.id %>">
              <%= image_tag product.photos.first.file.url.to_s, class: "product" %> 
            </a>
          <% end %> 
          <h4 class="shop-now">
            <%= link_to "Shop now", product_path(product), :class => 'btn-custom' %>   
            <%= number_to_currency(product.price) %>
          </h4> 
      </div>
    <% end %>  
  <% end %>
</div>
<div class="container text-center">
  <div class="pagination">
    <%= will_paginate products, renderer: BootstrapPagination::Rails %>
  </div>
</div>